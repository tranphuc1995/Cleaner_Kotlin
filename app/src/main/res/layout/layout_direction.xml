<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33.3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <ImageView
            android:id="@+id/image_bin"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/raleway"
            android:text="Junk Clean"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_memory_boost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33.3"
        android:foreground="@drawable/ripple_linear"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <ImageView
            android:id="@+id/image_memory_boost"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/raleway"
            android:text="Memory Boost"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33.3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <ImageView
            android:id="@+id/image_app_manager"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/raleway"
            android:text="App Manager"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>