<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_280sdp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:rotation="90">

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/progress_storage"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                custom:donut_background_color="@color/colorWhite"
                custom:donut_finished_color="@color/colorBlue"
                custom:donut_finished_stroke_width="@dimen/_3sdp"
                custom:donut_progress="0"
                custom:donut_show_text="false"
                custom:donut_unfinished_color="@color/color_unfinish_circle"
                custom:donut_unfinished_stroke_width="@dimen/_3sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:rotation="-90">

                <TextView
                    android:id="@+id/textview_percent_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/raleway"
                    android:text="58%"
                    android:textColor="@color/colorBlack"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_used_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="7.8GB"
                        android:textColor="@color/colorBlue"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textview_total_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="/13GB"
                        android:textColor="@color/colorTotal"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_title_storage"
                    android:fontFamily="@font/raleway"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="STORAGE"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="@dimen/_150sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:rotation="90">

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/progress_ram"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                custom:donut_background_color="@color/colorWhite"
                custom:donut_finished_color="@color/colorRed"
                custom:donut_finished_stroke_width="@dimen/_3sdp"
                custom:donut_progress="30"
                custom:donut_show_text="false"
                custom:donut_unfinished_color="@color/color_unfinish_circle"
                custom:donut_unfinished_stroke_width="@dimen/_3sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:rotation="-90">

                <TextView
                    android:id="@+id/textview_percent_ram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/raleway"
                    android:text="74%"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_used_ram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="1.5GB"
                        android:textColor="@color/colorRed"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textview_total_ram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="/2.1GB"
                        android:textColor="@color/colorTotal"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_title_ram"
                    android:fontFamily="@font/raleway"
                    android:paddingLeft="@dimen/_7sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="RAM"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_25sdp"
            android:rotation="90">

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/progress_battery"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                custom:donut_background_color="@color/colorWhite"
                custom:donut_finished_color="@color/colorGreen"
                custom:donut_finished_stroke_width="@dimen/_3sdp"
                custom:donut_progress="30"
                custom:donut_show_text="false"
                custom:donut_unfinished_color="@color/color_unfinish_circle"
                custom:donut_unfinished_stroke_width="@dimen/_3sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:rotation="-90">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_percent_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/raleway"
                        android:text="31%"
                        android:textColor="@color/colorBlack"
                        android:textSize="22sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_title_battery"
                    android:fontFamily="@font/raleway"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="BATTERY"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>